<h2><%= @title = "Additional Info" %></h2>

<div class="content">

<%= form_for @user, :url => additional_infos_path() do |f| %>
	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>
	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>
	<div>
	<%= f.label :time_zone %>
	<%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.all, :default => "Stockholm") %>
	</div>
	<%= f.submit %>
<% end %>
</div>